<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.0"
    xmlns="http://java.sun.com/xml/ns/persistence" 
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://java.sun.com/xml/ns/persistence 
    http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd">
    <persistence-unit name = "Server" transaction-type = "RESOURCE_LOCAL">
    	 <provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>
    	 <class>com.Kaczor.Kaluzinski.Kalarus.Serwer.Database.Aggrement</class>
    	 <class>com.Kaczor.Kaluzinski.Kalarus.Serwer.Database.Adresy</class>
    	 <class>com.Kaczor.Kaluzinski.Kalarus.Serwer.Database.Worker</class>
    	 <class>com.Kaczor.Kaluzinski.Kalarus.Database.Client</class>
    	 <class>com.Kaczor.Kaluzinski.Kalarus.Serwer.Database.Payment</class>
    	 <class>com.Kaczor.Kaluzinski.Kalarus.Serwer.Database.Trip</class>
    	 <class>com.Kaczor.Kaluzinski.Kalarus.Serwer.Database.Office</class>
    	 <class>com.Kaczor.Kaluzinski.Kalarus.Serwer.Database.AdminLogin</class>
    	 <properties>
    	 	<property name="javax.persistence.jdbc.driver" value="com.mysql.cj.jdbc.Driver" />
            <property name="javax.persistence.jdbc.url" value="jdbc:mysql://localhost:3306/baza" />
            <property name="javax.persistence.jdbc.user" value="root" />
            <property name="javax.persistence.jdbc.password" value="" />
			<property name="hibernate.hbm2ddl.auto" value="update"/>  <!-- create tworzy za kazdym razem nowa baze i tabele a update tworzy jesli nie istnieja -->
    	 </properties>       
    </persistence-unit> 
</persistence>